<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'space_menu' %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
    
          <div class="panel-heading">
            Amenities
          </div>
    
          <div class="panel-body">
            <div class="container">
              <%= form_for @space do |f| %>
    
                  <div class="row form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_heated_space %> Heated Space
                    </div>
                  </div>
    
                  <div class="row form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_chairs %> Unheated Space
                    </div>
                  </div>
                  
                  <div class="row form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_handi_accessible %> Handi-Accessible
                    </div>
                  </div>
                  
                  <br/><br/>
    
                  <div class="text-center">
                    <%= f.submit "Save", class: "btn btn-form" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>