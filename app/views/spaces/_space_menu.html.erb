<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_space_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Pricing", pricing_space_path, class: "sidebar-link active" %>
    <% if !@space.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_space_path, class: "sidebar-link active" %>
    <% if !@space.listing_name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_space_path, class: "sidebar-link active" %>
    <% if !@space.photos.blank? %>
      <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Amenities", amenities_space_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location Address", location_space_path, class: "sidebar-link active" %>
    <% if !@space.address.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@space.active && !@space.price.blank? && !@space.listing_name.blank? && !@space.photos.blank? && !@space.address.blank? %>

<%= form_for @space do |f| %>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>