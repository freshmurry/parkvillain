<header class="page-header bg-img-cover overlay overlay-primary overlay-90 page-header-dark" style="background-image: url('/assets/marina-city-parking.jpg');">
  <div class="page-header-content py-5">
    <div class="container">
      <div class="row banner">
        <div class="col-xl-8 col-lg-10 text-center">
          <h1 class="page-header-title">Awesome Local Parking Spaces</h1>
          <h4 class="page-header-text mb-5">Parking Space Rental</h4>
          <div class="form-row justify-content-center">
            <div class="col-lg-9 col-md-8">
              <div class="form-group mr-0 mr-lg-2">
                <%= form_tag search_path, method: :get do %>
                
                <%= text_field_tag :search, params[:search], placeholder: "Search for a Parking Space", class: "form-control", id: "autolocation" %>
              </div>
            </div>
            
            <div class="col-lg-3 col-md-4">
              <%= submit_tag "Search", class: "btn btn-form btn-block" %>
            </div>
          </div>
          <% end %>
          <p class="page-header-text small mb-0">By signing up, you agree to our <a href="javascript:void(0);">terms of service</a></p>
        </div>
      </div>
    </div>
  </div>
  <sbpro-border>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 10.34" preserveAspectRatio="none" fill="currentColor"></svg>
  </sbpro-border>
</header>

<br>

<!-- SPACES -->
<section class="">
  <div class="container">
    <div class="banner text-center">
    	<h2 class="text-blue">Spaces Near You</h2>
      <h3>Book and Rent a Parking Space</h3>
    </div>
    <br/>
      
    <div class="row">
      <%= render partial: "spaces/spaces_list", locals: {spaces: @spaces} %>
    </div>
  </div>
</section>
  
<!-- HOW PARKVILLAIN WORKS -->
<section class="">
  <div class="container">
    <div class="page-section">
    <div class="banner text-center">
     	<h2 class="text-blue">How ParkVillain Works</h2>
      <h3>Contact-less Awesomeness</h3>
    </div>
        
    <div class="row text-center">
      <div class="col-md-4">
      <div class="fas fa-car fa-4x text-blue"></div>
        <h3 class="my-3">Find a Space</h3>
        <p class="text-center">Search for a parking space near you, wait until the host confirm your date, and await your approval. Listings with the <i class="fa fa-bolt" style="color: #ffb400"></i> icon will be booked instantly.</p>
      </div>
                        
      <div class="col-md-4">
      <div class="fas fa-envelope fa-4x text-blue"></div>
        <h3>Chat With Host</h3>
        <p class="text-center">Send a message to your host if you need additional information or just to say thank you. Host will communicate any additional information as needed.</p>
      </div>
                        
      <div class="col-md-4">
      <div class="fas fa-credit-card fa-4x text-blue"></div>
       	<h3>Book and Pay</h3>
       	<p class="text-center">Our calender system helps both host and guest see your reservation day in realtime. Submit your payment will be a breeze through our secure Stripe checkout.</p>
      </div>
      
      <div class="row">
        <div class="banner col-lg-12 text-center">
          <button class="btn btn-form">
            <%= link_to "Sign Me Up!", new_user_registration_path, style: "text-decoration: none; color: #FFF; font-weight: 500; font-size: 20px" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

